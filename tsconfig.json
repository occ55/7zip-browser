{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "outDir": "./dist",
        "allowJs": false,
        "target": "es5",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true, // @TODO uncomment after removing mssql
        "alwaysStrict": true, // @TODO uncomment after removing mssql
        "strictNullChecks": true,
        // "skipLibCheck": true
        // "moduleResolution": "classic",
        "esModuleInterop": true,
        "lib": ["es5", "es2015.promise"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "./dist"]
}
